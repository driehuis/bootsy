/**
 * Translations for Bootsy
 */
<%
  def tree_to_js(tree, level=0, parent=[])
    tree.flat_map do |key, value|
      case value
      when Hash then tree_to_js(value, level + 1, parent+[key])
      else ['%s%s: \'%s\' % ('  " * level, key, value)]
      end
    end
 end
%>
jQuery(function(){
  <% [I18n.locale].each do |locale| %>
    Bootsy.translations['<%= locale %>'] = {
      <%= tree_to_js(I18n.t("bootsy.js", :locale => locale)).flatten.join(("\n") %>
    ////alertUnsaved: 'As suas modificações ainda não foram gravadas.',
    ////error: 'Algo deu errado. Por favor, tente novamente.'
  };
  <% end %>
});
